{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["es5", "es6", "es7", "esnext", "dom"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ui/*": ["src/*"],
      "@admin/*": ["admin/src/*"],
    },
    "noImplicitAny": false,
    "sourceRoot": "/",
    "inlineSources": true,
    "types": ["vuetify", "node"],

  },
  "typeAcquisition": { "enable": true },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/*.ts",
    "admin/**/*.ts",
    "admin/**/*.d.ts",
    "admin/**/*.vue",
    "vitest/**/*.ts",
    "vitest/*.ts",
    "vitest.config.ts"
  ],
  "extensions": [
    ".vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
